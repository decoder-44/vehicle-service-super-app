# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vehicle_super_app
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_MAX_CONNECTIONS=20

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_12345678
JWT_EXPIRES_IN=30d

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxx

# Google Maps API
GOOGLE_MAPS_API_KEY=xxxxx

# KYC Provider Configuration (Sandbox.co.in or Signzy)
KYC_PROVIDER=sandbox
KYC_API_URL=https://api.sandbox.co.in
KYC_API_KEY=xxxxx
KYC_API_SECRET=xxxxx

# SMS Provider (twilio or msg91)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=xxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890
MSG91_AUTH_KEY=xxxxx
MSG91_SENDER_ID=xxxxx

# Email Provider (sendgrid or nodemailer)
EMAIL_PROVIDER=nodemailer
SENDGRID_API_KEY=xxxxx
SENDGRID_FROM_EMAIL=noreply@vehiclesuperapp.com
NODEMAILER_HOST=smtp.gmail.com
NODEMAILER_PORT=587
NODEMAILER_USER=your-email@gmail.com
NODEMAILER_PASS=your-app-password

# Cloud Storage (s3 or cloudinary)
STORAGE_PROVIDER=cloudinary
AWS_S3_BUCKET=vehicle-app-uploads
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=xxxxx
AWS_S3_SECRET_KEY=xxxxx
CLOUDINARY_CLOUD_NAME=xxxxx
CLOUDINARY_API_KEY=xxxxx
CLOUDINARY_API_SECRET=xxxxx

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# Admin Configuration
ADMIN_EMAIL=admin@vehiclesuperapp.com
ADMIN_PASSWORD=secure_admin_password

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
